{
  "name": "Helper",
  "description": "Youtube extra functionality. Based on the reqeust will work on all the sites.",
  "version": "1.0",
  "icons": { "16": "image/16_icon.png",
           "48": "image/48_icon.png",
          "128": "image/128_icon.png" },
  "permissions": [
    "activeTab", "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["commonFunction.js","content-script.js"]
    }
  ],
  "options_page": "options_page.html",
  "browser_action": {
    "default_title": "Helper"
  },
  "manifest_version": 2
}

